<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_background</item>
        <item name="colorPrimaryDark">@color/sec_background</item>
        <item name="colorAccent">@color/primary_text</item>
        <item name="android:statusBarColor">@color/primary_background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.NewsLand.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="IntroTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_background</item>
        <item name="colorPrimaryDark">@color/sec_background</item>
        <item name="colorAccent">@color/primary_text</item>
        <item name="android:statusBarColor">@color/primary_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="TabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>