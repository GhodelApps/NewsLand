<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_header_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <TextView
        android:id="@+id/app_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/night_mode_button_size"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/paytone_one"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:textColor="@color/primary_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/night_mode_Button"
        android:layout_width="@dimen/night_mode_button_size"
        android:layout_height="@dimen/night_mode_button_size"
        android:layout_gravity="end"
        android:padding="6dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_day_24"
        app:layout_constraintBottom_toBottomOf="@+id/app_name_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/app_name_text" />

    <TextView
        android:id="@+id/app_subtitle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_header_subtitle"
        android:textColor="@color/sec_text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/app_name_text"
        app:layout_constraintTop_toBottomOf="@id/app_name_text"/>
</androidx.constraintlayout.widget.ConstraintLayout>