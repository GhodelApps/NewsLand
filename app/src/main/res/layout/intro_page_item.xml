<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/primary_background">

    <TextView
        android:id="@+id/intro_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_gravity="top|center_horizontal"
        android:fontFamily="@font/paytone_one"
        tools:text="Welcome to NewsLand"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/_18ssp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/intro_anim"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_146sdp"
        android:layout_marginTop="@dimen/_46sdp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/intro_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_56sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        android:fontFamily="@font/montserrat"
        android:lineSpacingExtra="@dimen/_1sdp"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/_14ssp"
        tools:text=" Get latest news as: \n\n - Top headlines \n - Categorised News \n - News from different sources" />

</LinearLayout>